# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# JavaScript files
[*.js]
indent_size = 4

# HTML templates
[*.html]
indent_size = 4

# CSS files
[*.css]
indent_size = 4

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# TOML files
[*.toml]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# SQL files
[*.sql]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 4

# Batch files (Windows)
[*.{bat,cmd}]
end_of_line = crlf

# Makefiles require tabs
[Makefile]
indent_style = tab

# Git configuration files
[.git*]
indent_size = 4
