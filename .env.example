# Automotive Repair Management System - Environment Variables Configuration
# Copy this file to .env and modify the values accordingly
#
# IMPORTANT: Never commit the actual .env file to version control!

# =============================================================================
# FLASK APPLICATION CONFIGURATION
# =============================================================================

# Environment: development, production, or testing
FLASK_ENV=development

# Secret key for session encryption (REQUIRED in production)
# Generate a secure key using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-generate-a-secure-one-for-production

# Server binding
HOST=127.0.0.1
PORT=5000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your-database-password
DB_NAME=spb

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# Demo mode for development only (set to 'true' to enable)
# WARNING: Never enable in production!
AUTH_DEMO_MODE=false

# Demo password (only used when AUTH_DEMO_MODE=true)
# DEMO_PASSWORD=your-demo-password

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_DIR=logs

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================

ITEMS_PER_PAGE=10
SESSION_TIMEOUT=7200

# =============================================================================
# PRODUCTION SECURITY (uncomment in production)
# =============================================================================

# SECURITY_PASSWORD_SALT=your-password-salt
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True

# =============================================================================
# EMAIL CONFIGURATION (optional)
# =============================================================================

# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@example.com
# MAIL_PASSWORD=your-email-password 